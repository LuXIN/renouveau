{% extends 'base.html.twig' %}

{% block body %}
	<div style="text-align: center; margin-top: 50px; background-color: #0099ff; color: white; padding: 1px;">
		<h5>HISTORIQUE DE TRANSACTIONS</h5>
	</div>
	<div style="margin-top: 50px;">
	{% for transaction in transactions %}
		<ul class="list-inline" style="padding-left: 30px;">
			<li><img src="{{ asset('/images/' ~transaction.picto~ '.png') }}" style="width: 60%;" /></li>
			<li>
				<span>
					<b>{{ transaction.commerce }}</b><br>
					{{ transaction.createdTime }}
				</span>
			</li>
			{% for card in transaction.cards %}
			<li>
				<img src="{{ asset('/images/' ~ card ~ '.png') }}" style="width: 60%;" />
			</li>
			{% endfor %}
			<li><span>{{ transaction.amount }}</span></li>
		</ul>
	{% endfor %}
	</div>
{% endblock %}