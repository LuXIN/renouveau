{% extends 'base.html.twig' %}

{% block body %}
    <div style="text-align: center; margin-top: 50px; background-color: #0099ff; color: white; padding: 1px;">
        <h5>MES CARTES</h5>
    </div>
    <div style="margin-top: 50px;">
    {% for card in cards %}
        <div style="text-align: center; margin-bottom: 50px;">
            <img src="{{ asset('/images/' ~card.picto~ '.png') }}" style="width: 70%;" />
            <p>Type : {{ card.bank }}</p>
            <p>Numéro : {{ card.cardNumber }}</p>
            <p>Catégories :</p>
            <ul class="list-inline">
                <li style="width: 22%;">
                    <a href="#">
                        <img src="{{ asset('/images/chope.png') }}" style="width: 100%;" />
                    </a>
                </li>
                <li style="width: 22%;">
                    <a href="#">
                        <img src="{{ asset('/images/franprix.png') }}" style="width: 100%;" />
                    </a>
                </li>
            </ul>
        </div>
    {% endfor %}
    </div>
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}" crossorigin="anonymous">
{% endblock %}